<div class="container">
  <div class="right">
    <a class="btn green lighten-2">Assign Address</a>
    <a class="btn blue lighten-2">Edit Customer</a>
    <a class="btn red lighten-2">Delete Customer</a>
  </div>
  <h3 class="customerName">{{customer.name}}</h3>
  <div class="row mt-4">
    <div class="col s12 no-padding">
      <table id="theTable">
        <thead class="grey lighten-3">
          <tr>
            <th>IP Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each customer.addresses}}
          <tr>
            <td>{{this.ip}}</td><td><a alt="Unassign IP"><i class="unassignIP edit-item fas fa-trash tooltipped" data-tooltip="Unassign IP" id="{{this.id}}"></i></a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="z-depth-5" id="assign-address">
      <h5 class="center" id="assignIPHeader">Assign Customer to IP</h3>
      <br><br>
      <form class="container" action="/addresses/assign" method="POST" class="col">
        <div class="row">
          <div class="input-field">
            <input type="text" name="customer" id="address-customer" data-length="50" class="autocomplete" autofocus required>
            <label for="address-customer">Customer</label>
            <input type="hidden" name="addressID" id="addressID" value="">
            <input type="hidden" name="prefixID" id="prefixID" value="{{this.id}}">
          </div>
          <div class="center-align mb-5">
            <button class="btn" type="submit" name="assignCustomer" id="assignCustomer">Assign</button>
            <button class="btn" type="button" name="close" id="assignCustomerClose">Close</button>
          </div>
        </div>
      </form>
    </div>
    <div class="z-depth-5" id="unassign-address">
      <h5 class="center" id="unassignIPHeader">Unassign IP from Customer</h3>
      <br><br>
      <form class="container" action="/addresses/unassign" method="POST" class="col">
        <div class="row">
          <div class="input-field">
            <input type="hidden" name="unaddressID" id="unaddressID" value="">
            <input type="hidden" name="uncustomer" id="uncustomer" value="">
            <input type="hidden" name="unprefixID" id="unprefixID" value="{{this.id}}">
          </div>
          <div class="center-align mb-5">
            <button class="btn" type="submit" name="unassignCustomer" id="unassignCustomer">Unassign</button>
            <button class="btn" type="button" name="unclose" id="unassignCustomerClose">Close</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/customers-unassign.js"></script>