<div class="row mt-4">
  <h5 class="center-align">Add Prefix</h5>
  <form action="/prefixes/add" method="POST" class="col s12 ml-3 mr-3" id="addPrefixForm">
    <div class="row">
      <div class="col s8 offset-s2 m3 offset-m3 l1 offset-l3">
        <label class="formLabel">Type*:</label>
        <br>
        <label for="prefix-static">
          <input type="radio" class="with-gap" id="prefix-static" name="type" value="static" {{#if static}} checked {{/if}}>
          <span>Static</span>
        </label>
        <br>
        <label for="prefix-dhcp">
          <input type="radio" class="with-gap" id="prefix-dhcp" name="type" value="dhcp" {{#if dhcp}} checked {{/if}}>
          <span>DHCP</span>
        </label>
      </div>
      <div class="col s8 offset-s2 m3 l2">
        <br>
        <label for="createAddresses">
          <input type="checkbox" id="createAddresses" name="createAddresses" {{#if createAddresses}} checked {{/if}}>
          <span>Create IP Addresses</span>
        </label>
      </div>
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3">
        <input type="text" name="prefix" id="prefix-prefix" data-length="50" value="{{prefix}}" required>
        <label for="prefix-prefix">Prefix/CIDR*</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3 offset-l3">
        <input type="text" name="name" id="prefix-name" data-length="50" value="{{name}}" required>
        <label for="prefix-name">Name*</label>
      </div>
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3">
        <input type="text" name="description" id="prefix-description" data-length="50" value="{{description}}">
        <label for="prefix-description">Description</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3 offset-l3">
        <input type="text" name="gateway" id="prefix-gateway" data-length="50" value="{{gateway}}" required>
        <label for="prefix-gateway">Gateway IP*</label>
      </div>
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3">
        <input type="text" name="subnet" id="prefix-subnet" data-length="50" value="{{subnet}}">
        <label for="prefix-subnet">Subnet Mask</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3 offset-l3">
        <input type="text" name="system" id="prefix-system" data-length="50" value="{{system}}">
        <label for="prefix-system">System - Ex, E7-2 E7-20 if needed</label>
      </div>
      <div class="input-field col s8 offset-s2 m6 offset-m3 l3">
        <input type="text" name="site" id="prefix-site" class="autocomplete" value="{{site}}">
        <label for="prefix-site">Site</label>
      </div>
    </div>
    <div class="center-align mb-5">
      <button class="btn" type="submit" name="addPrefix" id="addPrefix">Add</button>
    </div>
  </form>
</div>
<script src="/js/prefixes-add.js"></script>